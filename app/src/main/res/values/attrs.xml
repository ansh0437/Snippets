<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CoreButton">
        <attr name="font_name" format="string" />
        <attr name="corner_radius" format="integer" />
        <attr name="stroke_width" format="integer" />
        <attr name="text_color" format="color" />
        <attr name="selector_text_color" format="color" />
        <attr name="fill_color" format="color" />
        <attr name="stroke_color" format="color" />
        <attr name="selector_fill_color" format="color" />
        <attr name="selector_stroke_color" format="color" />
        <attr name="btn_style" format="enum">
            <enum name="normal" value="1" />
            <enum name="focusable" value="2" />
            <!--<enum name="filled" value="1" />-->
            <!--<enum name="stroke" value="1" />-->
            <!--<enum name="both" value="1" />-->
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

</resources>