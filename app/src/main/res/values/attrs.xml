<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CoreButton">
        <attr name="font_name" format="string" />
        <attr name="corner_radius" format="integer" />
        <attr name="stroke_width" format="integer" />
        <attr name="text_color" format="color" />
        <attr name="selector_text_color" format="color" />
        <attr name="fill_color" format="color" />
        <attr name="stroke_color" format="color" />
        <attr name="selector_fill_color" format="color" />
        <attr name="selector_stroke_color" format="color" />
        <attr name="btn_style" format="enum">
            <enum name="normal" value="1" />
            <enum name="focusable" value="2" />
            <!--<enum name="filled" value="1" />-->
            <!--<enum name="stroke" value="1" />-->
            <!--<enum name="both" value="1" />-->
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ArcView">
        <attr name="arcRadius" format="dimension" />
        <attr name="arcWidth" format="dimension" />
        <attr name="startAngle" format="float" />
        <attr name="sweepAngle" format="float" />
        <attr name="arcColor" format="color" />
        <attr name="drawOnlyStroke" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CurvesLoader">
        <attr name="curves_noOfCurves" format="integer" />
        <attr name="curves_outermostCurveRadius" format="dimension" />
        <attr name="curves_curveWidth" format="dimension" />
        <attr name="curves_distanceBetweenCurves" format="dimension" />
        <attr name="curves_curveSweepAngle" format="float" />
        <attr name="curves_curveColor" format="color" />
        <attr name="curves_animDuration" format="integer" />
        <attr name="curves_interpolator" format="reference" />
    </declare-styleable>

</resources>